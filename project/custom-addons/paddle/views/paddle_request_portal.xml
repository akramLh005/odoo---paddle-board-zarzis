<odoo>

    <template id="portal_my_home" name="Show Request" inherit_id="portal.portal_my_home" customize_show="True"
              priority="20">
        <xpath expr="//div[hasclass('o_portal_docs')]" position="inside">
            <t t-call="portal.portal_docs_entry">
                <t t-set="title">Paddle Request</t>
                <t t-set="url" t-value="'/my/details'"/>
                <t t-set="placeholder_count" t-value="'task_count'"/>
            </t>
        </xpath>
    </template>

    <template id="my_paddle_link" name="Link to frontend portal" inherit_id="portal.user_dropdown">
        <xpath expr="//a[@href='/my/home']" position="replace">
            <a href="/my/details" role="menuitem" class="dropdown-item ps-3">
                <i class="fa fa-fw fa-id-card-o me-1 small text-muted"/>
                My Request
            </a>
        </xpath>
    </template>

    <template id="portal_my_paddle2" name="My Requests">
        <t t-call="portal.portal_layout">
            <t t-set="breadcrumbs_searchbar" t-value="False"/>

            <t t-call="portal.portal_searchbar">
                <t t-set="title">My Requests</t>
            </t>
            <t t-if="not invoices">
                <p>There are currently no requests for your account.</p>
            </t>
            <t t-if="invoices" t-call="portal.portal_table">
                <thead>
                    <tr class="active text-center">
                        <th>Name</th>
                        <th>Number of person</th>
                        <th>Date</th>
                        <th>Session</th>
                        <th class="text-center">Status</th>
                    </tr>
                </thead>
                <tbody>
                    <t t-foreach="invoices" t-as="invoice">
                        <tr class="text-center">
                            <td>
                                <span t-field="invoice.name"/>
                            </td>
                            <td>
                                <span t-field="invoice.nbr_person"/>
                            </td>
                            <td>
                                <span t-field="invoice.date_id"/>
                            </td>
                            <td>
                                <span t-field="invoice.session_id2"/>
                            </td>
                            <td class="tx_status text-center">
                                <t t-if="invoice.state == 'in_progress'">
                                    <span class="badge rounded-pill text-bg-info">
                                        <i class="fa fa-fw fa-clock-o" aria-label="Progress" title="Progress"
                                           role="img"></i>
                                        <span class="d-none d-md-inline">In Progress</span>
                                    </span>
                                </t>
                                <t t-if="invoice.state == 'canceled'">
                                    <span class="badge rounded-pill text-bg-danger">
                                        <i class="fa fa-fw fa-repeat" aria-label="Cancelled" title="Cancelled"
                                           role="img"></i>
                                        <span class="d-none d-md-inline">Cancelled</span>
                                    </span>
                                </t>
                                <t t-if="invoice.state == 'approved'">
                                    <span class="badge rounded-pill text-bg-success">
                                        <i class="fa fa-fw fa-check" aria-label="Approved" title="Approved"
                                           role="img"></i>
                                        <span class="d-none d-md-inline">Approved</span>
                                    </span>
                                </t>
                            </td>
                        </tr>
                    </t>
                </tbody>
            </t>
        </t>
    </template>

    <template id="apply-paddle" name="apply-paddle" customize_show="True">
        <t t-call="website.layout">

            <div id="wrap" class="container">
                <div class="oe_structure mt-2"/>
                <section class="s_process_steps pt24 pb24 s_process_steps_connector_line" data-vcss="001">
                    <svg class="s_process_step_svg_defs position-absolute">
                        <defs>
                            <marker class="s_process_steps_arrow_head" markerWidth="15" markerHeight="10" refX="6"
                                    refY="6" orient="auto">
                                <path d="M 2,2 L10,6 L2,10 L6,6 L2,2" vector-effect="non-scaling-size"/>
                            </marker>
                        </defs>
                    </svg>
                    <div class="container">
                        <div class="row g-0">
                            <div class="col-3 col-lg-4 pb24 pt24 s_process_step">
                                <svg class="s_process_step_connector" viewBox="0 0 100 20" preserveAspectRatio="none">
                                    <path d="M 0 10 L 100 10" vector-effect="non-scaling-stroke"/>
                                </svg>
                                <div class="s_process_step_icon">
                                    <i class="fa fa-calendar fa-2x mx-auto rounded-circle bg-primary"/>
                                </div>
                                <div class="s_process_step_content">
                                    <h2>Choose Date</h2>
                                </div>
                            </div>
                            <div class="col-6 col-lg-4 s_process_step pt24 pb24">
                                <svg class="s_process_step_connector" viewBox="0 0 100 20" preserveAspectRatio="none">
                                    <path d="M 0 10 L 100 10" vector-effect="non-scaling-stroke"/>
                                </svg>
                                <div class="s_process_step_icon">
                                    <i class="fa fa-location-arrow fa-2x mx-auto rounded-circle bg-secondary"/>
                                </div>
                                <div class="s_process_step_content">
                                    <h2>Choose Session</h2>
                                </div>
                            </div>
                            <div class="col-3 col-lg-4 pb24 pt24 s_process_step">
                                <svg class="s_process_step_connector" viewBox="0 0 100 20" preserveAspectRatio="none">
                                    <path d="M 0 10 L 100 10" vector-effect="non-scaling-stroke"/>
                                </svg>
                                <div class="s_process_step_icon">
                                    <i class="fa fa-check-circle fa-2x mx-auto rounded-circle bg-secondary"/>
                                </div>
                                <div class="s_process_step_content">
                                    <h2>Let's Go</h2>
                                </div>
                            </div>
                        </div>
                    </div>
                </section>
                <br/>
                <span class="hidden" data-for="hr_recruitment_form"
                      t-att-data-values="{'date_id': date_id, 'session_id': session_id}"/>
                <div id="jobs_section" class="container">
                    <div class="row justify-content-center">
                        <section id="forms" class="col-12 col-md-9 s_website_form" data-vcss="001"
                                 data-snippet="s_website_form">
                            <div class="container">
                                <form id="hr_recruitment_form" action="/website/form/" method="post"
                                      enctype="multipart/form-data" class="o_mark_required row"
                                      data-mark="*" data-force_action="paddle.board.order"
                                      data-model_name="paddle.board"
                                      data-success-mode="redirect" data-success-page="/my/details"
                                      hide-change-model="true">
                                    <div class="s_website_form_rows row s_col_no_bgcolor">
                                        <div class="d-none col-12 mb-0 py-2 s_website_form_field s_website_form_required s_website_form_model_required"
                                             data-type="char" data-name="Field">
                                            <div class="row s_col_no_resize s_col_no_bgcolor">
                                                <label class="col-4 col-sm-auto s_website_form_label"
                                                       style="width: 200px" for="name">
                                                    <span class="s_website_form_label_content">Your Name</span>
                                                    <span class="s_website_form_mark">*</span>
                                                </label>
                                                <div class="col-sm">
                                                    <input id="name" type="text"
                                                           class="form-control s_website_form_input"
                                                           name="name" required=""
                                                           data-fill-with="name"/>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="d-none col-12 mb-0 py-2 s_website_form_field s_website_form_required"
                                             data-type="email" data-name="Field">
                                            <div class="row s_col_no_resize s_col_no_bgcolor">
                                                <label class="col-4 col-sm-auto s_website_form_label"
                                                       style="width: 200px" for="nbr_person">
                                                    <span class="s_website_form_label_content">Number of person</span>
                                                    <span class="s_website_form_mark">*</span>
                                                </label>
                                                <div class="col-sm">
                                                    <input id="nbr_person" type="number" min="00"
                                                           class="form-control s_website_form_input"
                                                           name="nbr_person" required=""/>
                                                    <span id="max_number" style="font-size: smaller;color: #bb1e1e;"/>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="d-none col-12 mb-0 py-2 s_website_form_field s_website_form_required"
                                             data-type="char" data-name="Field">
                                            <div class="row s_col_no_resize s_col_no_bgcolor">
                                                <label class="col-4 col-sm-auto s_website_form_label"
                                                       style="width: 200px" for="phone">
                                                    <span class="s_website_form_label_content">Your Phone Number</span>
                                                    <span class="s_website_form_mark">*</span>
                                                </label>
                                                <div class="col-sm">
                                                    <input id="phone" type="tel"
                                                           class="form-control s_website_form_input"
                                                           name="phone" required=""
                                                           data-fill-with="phone"/>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="d-none col-12 mb-0 py-2 s_website_form_field date_id_class">
                                            <div class="row s_col_no_resize s_col_no_bgcolor">
                                                <label class="col-4 col-sm-auto s_website_form_label"
                                                       style="width: 200px" for="date_id">
                                                    <span class="s_website_form_label_content">Date</span>
                                                </label>
                                                <div class="col-sm">
                                                    <select id="date_id" name="date_id"
                                                            class="form-control s_website_form_input">
                                                        <option value="">Choose Date...</option>
                                                        <t t-foreach="available_dates" t-as="country">
                                                            <option t-att-value="country.id">
                                                                <t t-esc="country.date"/>
                                                            </option>
                                                        </t>
                                                    </select>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="d-none col-12 mb-0 py-2 s_website_form_field">
                                            <div class="row s_col_no_resize s_col_no_bgcolor">
                                                <label class="col-4 col-sm-auto s_website_form_label"
                                                       style="width: 200px" for="session_id2">
                                                    <span class="s_website_form_label_content">Session</span>
                                                </label>
                                                <div class="col-sm">
                                                    <select id="session_id2" name="session_id2"
                                                            class="form-control s_website_form_input">
                                                        <option value="">Choose Session...</option>
                                                        <t t-foreach="sessions" t-as="session">
                                                            <option t-att-value="session.id">
                                                                <t t-esc="session.complete_name"/>
                                                            </option>
                                                        </t>
                                                    </select>
                                                </div>
                                            </div>
                                        </div>

                                        <div id="calendar">
                                            <div t-foreach="available_months" t-as="month"
                                                 t-attf-id="month-#{month['id']}"
                                                 t-attf-class="o_appointment_month #{'d-none' if not int(month['id']) == 0 else ''}">
                                                <div id="calendarHeader"
                                                     class="d-inline-flex align-items-baseline container-fluid">
                                                    <h4 t-out="month['month']"
                                                        class="o_appointment_month_name col text-center"/>
                                                    <t t-if="int(month['id']) &lt; len(available_months) - 1">
                                                        <button type="button" id="nextCal"
                                                                t-attf-class="btn btn-primary o_js_calendar_navigate ms-1 d-none">
                                                            <i class="fa fa-arrow-right"/>
                                                        </button>
                                                    </t>

                                                </div>
                                                <table class="table mt-2 month_table">
                                                    <tr class="active">
                                                        <t t-foreach="formated_days" t-as="day">
                                                            <th class="text-center p-md-2 p-1 align-middle"
                                                                t-out="day"/>
                                                        </t>
                                                    </tr>
                                                    <tr t-foreach="month['weeks']" t-as="weeks"
                                                        class="o_appointment_days">
                                                        <t t-foreach="weeks" t-as="day">
                                                            <td t-attf-class="align-middle p-md-2 p-1 text-center#{day and ' o_day' or ''} #{day.get('weekend_cls', '')} #{day.get('today_cls', '')}"
                                                                t-attf-title="#{day.get('today_cls', '') and 'Today' or ''}">
                                                                <t t-if="day['slots']">
                                                                    <div t-att-id="day['day'].strftime('%Y-%m-%d')"
                                                                         name="date_id"
                                                                         class="o_day_wrapper o_slot_button mx-auto px-1 px-md-2 py-2 w-75 w-md-50"
                                                                         t-out="day['day'].day"
                                                                         t-att-data-available-slots="json.dumps(day['slots'])">
                                                                    </div>

                                                                </t>
                                                                <t t-if="not day['slots']">
                                                                    <div t-out="day['day'].day"
                                                                         t-attf-class="o_day_wrapper mx-auto px-1 px-md-2 py-2 w-75 w-md-50 text-muted o_mute_day"/>
                                                                </t>
                                                            </td>
                                                        </t>
                                                    </tr>
                                                </table>
                                            </div>
                                        </div>

                                        <div class="d-none col-12 mb-0 py-2 s_website_form_field session_section">
                                            <div class="row s_col_no_resize s_col_no_bgcolor">
                                                <label class="col-4 col-sm-auto s_website_form_label"
                                                       style="width: 200px" for="session_id2">
                                                    <span class="s_website_form_label_content"/>
                                                </label>
                                                <!-- Active Sessions -->
                                                <div class="tab-pane">
                                                    <div class="text-center o_appointment_selected_slot_date pt-1"
                                                         t-out="slotDate"/>
                                                    <div class="o_slots_list row px-0">
                                                        <t t-foreach="sessions" t-as="session">
                                                            <div id="session_id2" name="session_id2"
                                                                 class="d-flex btn btn-outline-primary align-items-center justify-content-center col-md-6 col-12 mt-2 session_id2"
                                                                 t-out="session.complete_name">
                                                            </div>
                                                        </t>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>


                                        <div class="d-none col-12 s_website_form_submit mb64" data-name="Submit Button">
                                            <div style="width: 200px" class="s_website_form_label"/>
                                            <a href="#" role="button" id="submit_form"
                                               class="btn btn-primary btn-lg s_website_form_send">I'm feeling lucky
                                            </a>
                                            <span id="s_website_form_result"/>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </section>
                    </div>
                </div>
                <div class="oe_structure mt-2"/>
            </div>
        </t>
    </template>


